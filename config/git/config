[user]
    name = Damien DeVille
    email = damien@ddeville.me
[core]
    editor = nvim
	excludesfile = ~/.config/git/gitignore_global
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[push]
    default = simple
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
    required = true
[alias]
    st = status
    br = branch -vv
    co = checkout
    aa = add -A
    ci = commit
    di = diff
    df = difftool
    mg = merge
    mt = mergetool
    pr = pull --rebase
    pu = push
    un = reset HEAD --
    last = log -1 HEAD
    authors = shortlog -s -n -e
    ls = log --graph --pretty='%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --abbrev-commit --date=short
    dbclean = clean -f -d -x -e .vagrant -e .idea -e virtual_env -e .run-box.ini
[dbx]
    messagedisplayversion = 1
