tap "1password/tap"
tap "fish-shell/fish-beta-4"
tap "github/gh"
tap "koenbollen/public"
tap "teamookla/speedtest"
tap "warrensbox/tap"

cask_args appdir: "/Applications", require_sha: true, no_quarantine: true

# ============== Shell ==============

brew "bash"
brew "bat"
brew "curl"
brew "dasel"
brew "difftastic"
brew "dust"
brew "eza"
brew "fd"
brew "fish-shell/fish-beta-4/fish"
brew "fzf"
brew "gh"
brew "git"
brew "htop"
brew "hyperfine"
brew "koenbollen/public/jl"
brew "jless"
brew "jq"
brew "lazygit"
brew "neovim"
brew "openssh"
brew "readline"
brew "ripgrep"
brew "stow"
brew "teamookla/speedtest/speedtest"
brew "tmux"
brew "vim"
brew "wget"
brew "zoxide"

# =========== Development ===========

brew "bash-language-server"
brew "buildifier"
brew "buf"
brew "checkbashisms"
brew "clang-format"
brew "cmake"
brew "colima"
brew "docker"
brew "docker-buildx", postinstall: "mkdir -p $HOME/.docker/cli-plugins && ln -sfn /opt/homebrew/opt/docker-buildx/bin/docker-buildx $HOME/.docker/cli-plugins/docker-buildx"
brew "docker-compose", postinstall: "mkdir -p $HOME/.docker/cli-plugins && ln -sfn /opt/homebrew/opt/docker-buildx/bin/docker-compose $HOME/.docker/cli-plugins/docker-compose"
brew "golang"
brew "gopls"
brew "isort"
brew "luarocks"
brew "lua-language-server"
brew "ninja"
brew "node"
brew "pyenv"
brew "pyenv-virtualenv"
brew "pyright"
brew "qemu"
brew "ruff"
brew "rust-analyzer"
brew "shellcheck"
brew "shfmt"
brew "stylua"
brew "terraform-ls"
brew "typescript-language-server"
brew "uv"
brew "warrensbox/tap/tfswitch"
brew "yaml-language-server"

# ============== Fonts ==============

cask "font-anonymous-pro"
cask "font-anonymice-nerd-font"

# ============== Apps ===============

cask "1password/tap/1password-cli"
cask "1password"
cask "alacritty", postinstall: "$HOME/scripts/bin/macos/.local/bin/codesign-alacritty"
