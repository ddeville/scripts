[user]
    name = Damien Deville
    email = damien@ddeville.me
    signingkey = ~/.ssh/id_personal.pub
[gpg]
    format = ssh
[gpg "ssh"]
    program = op-ssh-sign
    allowedSignersFile = ~/.config/git/allowed_signers
[core]
    editor = nvim
    excludesfile = ~/.config/git/gitignore_global
    preloadIndex = true
    filemode = true
    precomposeUnicode = true
    fsmonitor = true
    untrackedCache = true
[feature]
    manyFiles = true
[init]
    defaultBranch = master
[fetch]
    writeCommitGraph = true
    parallel = 8
[checkout]
    workers = 8
[commit]
    gpgsign = true
[push]
    default = simple
    autoSetupRemote = true
[pack]
    threads = 16
[gc]
    writeCommitGraph = true
[maintenance]
    strategy = incremental
[commitGraph]
    generationVersion = 2
[remote "origin"]
    prune = true
[alias]
    st = status
    br = branch -vv
    co = checkout
    aa = add -A
    ci = commit
    cu = commit --no-gpg-sign
    di = diff
    df = difftool
    mg = merge
    mt = mergetool
    pr = pull --rebase
    pu = push
    puf = push --force
    un = reset HEAD --
    last = log -1 HEAD
    authors = shortlog -s -n -e
    ls = log --graph --pretty='%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --abbrev-commit --date=short
    logs = log --show-signature
[diff]
    tool = difftastic
    algorithm = patience
    compactionHeuristic = true
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[merge]
    tool = vimdiff
    conflictstyle = zdiff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "vimdiff"]
    layout = (LOCAL,BASE,REMOTE)/MERGED
[pager]
    difftool = true
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[includeIf "hasconfig:remote.*.url:*@github.openai:openai/**"]
    path = ~/.config/git/config_openai
