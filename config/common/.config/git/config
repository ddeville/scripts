[gpg]
    format = ssh
[gpg "ssh"]
    # NOTE: If on macos, remember to symlink "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
    #       to `/opt/1Password/op-ssh-sign`.
    program = /opt/1Password/op-ssh-sign
[commit]
    gpgsign = true
[diff]
    tool = vimdiff
    algorithm = patience
    compactionHeuristic = true
[difftool]
    prompt = false
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[push]
    default = simple
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
    required = true
[alias]
    st = status
    br = branch -vv
    co = checkout
    aa = add -A
    ci = commit
    di = diff
    df = difftool
    mg = merge
    mt = mergetool
    pr = pull --rebase
    pu = push
    un = reset HEAD --
    last = log -1 HEAD
    authors = shortlog -s -n -e
    ls = log --graph --pretty='%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --abbrev-commit --date=short
[init]
    defaultBranch = master
