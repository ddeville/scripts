[includeIf "hasconfig:remote.*.url:git@github.openai:openai/**"]
    path = ~/.config/git/config_openai
[gpg]
    format = ssh
[gpg "ssh"]
    program = op-git-ssh-sign
    allowedSignersFile = ~/.config/git/allowed_signers
[commit]
    gpgsign = true
[diff]
    tool = vimdiff
    algorithm = patience
    compactionHeuristic = true
[difftool]
    prompt = false
[merge]
    tool = vimdiff
    conflictstyle = zdiff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "vimdiff"]
    layout = (LOCAL,BASE,REMOTE)/MERGED
[push]
    default = simple
    autoSetupRemote = true
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
    required = true
[alias]
    st = status
    br = branch -vv
    co = checkout
    aa = add -A
    ci = commit
    cu = commit --no-gpg-sign
    di = diff
    df = difftool
    mg = merge
    mt = mergetool
    pr = pull --rebase
    pu = push
    puf = push --force
    un = reset HEAD --
    last = log -1 HEAD
    authors = shortlog -s -n -e
    ls = log --graph --pretty='%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]' --abbrev-commit --date=short
    logs = log --show-signature
[init]
    defaultBranch = master
