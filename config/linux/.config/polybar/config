[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:DisplayPort-0}
inherit = bar/shared
modules-left = date bspwm xwindow
modules-center =
modules-right = network temperature cpu memory filesystem pulseaudio dunst powermenu
tray-position = right
tray-padding = 4
tray-maxsize = 28
tray-background = ${colors.background-alt}
enable-ipc = true

[bar/term]
monitor = ${env:MONITOR:DisplayPort-1}
inherit = bar/shared
modules-left = date bspwm
modules-center =
modules-right = pacman-updates aur-updates

[bar/shared]
wm-restack = bspwm
width = 100%
height = 48
dpi = 140
radius = 0.0
fixed-center = false
bottom = true
separator = |
border-size = 5
line-size = 3
padding = 1
module-margin = 1
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "Noto Sans Mono:size=10;1"
font-1 = "Noto Sans Mono:size=10;1"
font-2 = "Noto Sans Symbols:size=10;1"
font-3 = "Noto Sans Symbols2:size=10;1"
font-4 = "Font Awesome 5 Free:size=12;1"
font-5 = "Font Awesome 5 Free Solid:size=12;1"
font-6 = "Font Awesome 5 Brands:size=12;1"

[global/wm]
margin-top = 0

[settings]
screenchange-reload = true

[module/date]
type = internal/date
interval = 5
date = "%a %b %d"
time = %I:%M%p
label = %date% %time%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true
label-focused = " %name% "
label-focused-underline = #fba922
label-occupied = " %name% "
label-occupied-foreground = #ffaa00
label-urgent = " %name% "
label-urgent-underline = #9b0a20
label-empty = " %name% "
label-empty-foreground = #555555

[module/xwindow]
type = internal/xwindow
format-prefix = "    "
format-prefix-foreground = ${colors.foreground-alt}
label = "%title:0:60:...%"

[module/network]
type = internal/network
interface = enp4s0
interval = 1.0
format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = " %upspeed%  %downspeed%"
format-disconnected =

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
base-temperature = 20
warn-temperature = 60
format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}
label = %temperature-f%
label-warn = %temperature-f%
label-warn-foreground = ${colors.secondary}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 1
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f50a4d
label = %percentage_used:2%%

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 25
format-mounted = <label-mounted>
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = #55aa55
label-mounted = %free%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume> <bar-volume>
use-ui-max = false
interval = 1
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
label-muted = 
label-muted-foreground =  ${colors.foreground-alt}
ramp-volume-foreground = ${colors.foreground-alt}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/dunst]
type = custom/ipc
initial = 1
format-foreground = #fba922
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}%{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}%{A}" &

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = 
label-open-foreground = ${colors.alert}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = suspend
menu-0-0-exec = systemctl suspend
menu-0-1 = reboot
menu-0-1-exec = systemctl reboot
menu-0-2 = power off
menu-0-2-exec = systemctl poweroff

[module/pacman-updates]
type = custom/script
exec = checkupdates 2> /dev/null | wc -l
interval = 1200
label = Pacman: %output%
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = ${colors.alert}
format-underline = #55aa55

[module/aur-updates]
type = custom/script
exec = paru -Qua 2> /dev/null | wc -l
interval = 1200
label = AUR: %output%
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = ${colors.alert}
format-underline = #55aa55

