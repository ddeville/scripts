#!/usr/bin/env bash

DIRS=(common)

# Platform-specific stuff
if [ "$(uname)" = "Linux" ]; then
  DIRS+=(linux)
elif [ "$(uname)" = "Darwin" ]; then
  DIRS+=(macos)
fi

# Private stuff
if [ -d "$HOME/scripts-oai" ]; then
  DIRS+=(oai)
fi

stow "${DIRS[@]}" --dir "$HOME/scripts/config" --target "$HOME" --verbose
stow "${DIRS[@]}" --dir "$HOME/scripts/bin" --target "$HOME" --verbose
