#!/bin/sh

if [ "$(uname)" = "Linux" ]; then
    DIRS="common linux"
elif [ "$(uname)" = "Darwin" ]; then
    DIRS="common macos"
else
    DIRS="common"
fi

pushd $HOME/scripts/config > /dev/null
stow $DIRS -t $HOME -v
popd > /dev/null

pushd $HOME/scripts/bin > /dev/null
stow $DIRS -t $HOME -v
popd > /dev/null
