#!/bin/bash

dirs=(common)
extras=()

# Platform-specific stuff
plat="$(uname)"
if [ "$plat" = "Linux" ]; then
  dirs+=(linux)
elif [ "$plat" = "Darwin" ]; then
  dirs+=(macos)
fi

# OpenAI stuff
if [ -d "$HOME/scripts-openai" ]; then
  dirs+=(openai)
  extras+=(--ignore=authorized_keys)
fi

stow "${dirs[@]}" "${extras[@]}" --dir "$HOME/scripts/config" --target "$HOME" --verbose
stow "${dirs[@]}" "${extras[@]}" --dir "$HOME/scripts/bin" --target "$HOME" --verbose
