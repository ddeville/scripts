#!/usr/bin/env bash

if [ "$(uname)" = "Linux" ]; then
  DIRS=(common linux)
elif [ "$(uname)" = "Darwin" ]; then
  DIRS=(common macos)
else
  DIRS=(common)
fi

if [ -d "$HOME/oai-damien-scripts" ]; then
  DIRS+=('oai')
fi

stow "${DIRS[@]}" --dir "$HOME/scripts/config" --target "$HOME" --verbose
stow "${DIRS[@]}" --dir "$HOME/scripts/bin" --target "$HOME" --verbose
