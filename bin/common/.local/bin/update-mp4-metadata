#!/bin/bash

if [ -z "$1" ]; then
  echo "Usage: $0 <input_file>"
  exit 1
fi

input_file="$1"

if [ ! -f "$input_file" ]; then
  echo "Error: File '$input_file' does not exist."
  exit 1
fi

if [[ ${input_file##*.} != "mp4" ]]; then
  echo "Error: File '$input_file' is not an MP4 file."
  exit 1
fi

allowed_langs=("en" "es" "fr" "he" "it" "ja" "ru" "sv")
read -r -p "Movie language (${allowed_langs[*]}): " lang_code

if [[ ! " ${allowed_langs[*]} " =~ $lang_code ]]; then
  echo "Error: Invalid language code. Choose from: ${allowed_langs[*]}"
  exit 1
fi

tool="MP4Box"

# Retrieve the IDs of all tracks in the file
track_ids=$("$tool" -info "$input_file" 2>&1 | grep '# Track' | awk '{print $3}')

cmd=("$tool" "$input_file")

# Remove all metadata
# Note that ideally we would use `-itags all=clear` which would remove all tags but it seems
# like it ends up rewriting the entire file which is very slow...
# So instead just remove the one that are either annoying or known to cause problems in Plex.
cmd+=("-itags" "tool=NULL:encoder=NULL:title=NULL:artist=NULL:show=NULL")

# Set language on all tracks
for track_id in $track_ids; do
  cmd+=("-lang" "${track_id}=${lang_code}")
done

echo "Running: ${cmd[*]}"
"${cmd[@]}"
