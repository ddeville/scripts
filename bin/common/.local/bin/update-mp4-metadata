#!/bin/bash

set -eu -o pipefail

tool="MP4Box"

if [ -z "$1" ]; then
  echo "Usage: $0 <input_file>"
  exit 1
fi

input_file="$1"

if [ ! -f "$input_file" ]; then
  echo "Error: File '$input_file' does not exist."
  exit 1
fi

if [[ ${input_file##*.} != "mp4" ]]; then
  echo "Error: File '$input_file' is not an MP4 file."
  exit 1
fi

if ! command -v $tool &>/dev/null; then
  echo "Error: MP4Box is not installed. Please install it and try again."
  exit 1
fi

lang_code=$(
  MP4Box -languages 2>&1 |
    awk '/ - [a-z][a-z]\)$/ { print }' |
    fzf --prompt="Movie language: " |
    awk '
      match($0, / \([^)]+\)$/) {
        codes = substr($0, RSTART + 2, RLENGTH - 3)
        split(codes, parts, " - ")
        code3 = parts[1]
        code2 = parts[2]
        gsub(/[ \t]+/, "", code3)
        gsub(/[ \t]+/, "", code2)
        print code2
      }
    '
)
if [ -z "$lang_code" ]; then
  echo "Error: No language selected."
  exit 1
fi

# Retrieve the IDs of all tracks in the file.
track_ids=$("$tool" -info "$input_file" 2>&1 | grep '# Track' | awk '{print $3}')

cmd=("$tool" "$input_file")

# Remove all metadata.
cmd+=("-itags" "clear")

# Set language on all tracks.
for track_id in $track_ids; do
  cmd+=("-lang" "${track_id}=${lang_code}")
done

echo "Running: ${cmd[*]}"
"${cmd[@]}"
