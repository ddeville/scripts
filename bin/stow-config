#!/bin/sh

mkdir -p $HOME/.local/bin

stow -d $HOME/scripts/config/common -t $HOME . -v
if [ "$(uname)" = "Linux" ]; then
    stow -d $HOME/scripts/config/linux -t $HOME . -v
    stow -d $HOME/scripts/linux/bin -t $HOME/.local/bin . -v
fi

stow -d $HOME/scripts/bin -t $HOME/.local/bin . -v
if [ "$(uname)" = "Darwin" ]; then
    stow -d $HOME/scripts/config/macos -t $HOME . -v
    stow -d $HOME/scripts/macos/bin -t $HOME/.local/bin . -v
fi
