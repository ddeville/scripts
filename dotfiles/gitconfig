[user]
    name = Damien DeVille
    email = damien@ddeville.me
[core]
    editor = vim
[diff]
    tool = Kaleidoscope
[difftool]
    prompt = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = Kaleidoscope
[mergetool]
    prompt = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[push]
    default = simple
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
    required = true
[alias]
    st = status
    br = branch -vv
    co = checkout
    aa = add -A
    ci = commit
    di = diff
    df = difftool
    mg = merge
    mt = mergetool
    un = reset HEAD --
    last = log -1 HEAD
    lo = log --pretty=format:'%C(yellow)%h  %<(11)%Cred%cd %<(20)%Cblue%an%Cgreen%d %Creset%s' --date=short
    dbclean = clean -f -d -x -e .vagrant -e .idea -e virtual_env

